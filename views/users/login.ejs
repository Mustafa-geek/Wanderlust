<%- layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <h3 class="col-6 offset-3"> Login for Wanderlust</h3>
            <div class="col-8 offset-2">

                <!-- khaali button pe POST form use nhi karke,puron pe isliye karre taaki backend ku cheeza bheja sake -->
                <form action="/login" method="POST" class="needs-validation" novalidate> 
                    <div class="mb-3">    
                        <label for="username" class="form-label">Username</label>    
                        <input name="username"
                        id="username"
                        type="text"
                         class="form-control"
                         required>
                       </div> 


    
                    <div class="mb-3">    
                        <label for="password" class="form-label">Password</label>    
                        <input name="password"
                        id="password"
                        type="password"
                         class="form-control"
                         required>
                       </div> 


                       
                        <button class="btn btn-success" >Login</button>

                </form>




            </div>
        </div>
    </body>